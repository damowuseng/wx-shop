/* components/goods-item/goods-item.wxss */
.goods-item {
  text-align: center;
  color: #333;
  padding-bottom: 85rpx;
  position: relative;
  margin-top: 10rpx;
}
.goods-image {
  width: 100%;
  border-radius: 10rpx;
}
.desc-info {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 5rpx;
}
.desc-info .price {
  color: #ff5777;
}
.desc-info .icon {
  width: 30rpx;
  height: 30rpx;
  padding: 0 6rpx 0 10rpx;
  position: relative; 
  top: 4rpx;
}
.desc-info .title {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 28rpx;
}
.info {
  font-size: 26rpx;
}